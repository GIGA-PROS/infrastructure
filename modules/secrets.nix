{config, ...}:

{
  age = {
    # This is the path where we stored the key
    # generated by Terraform
    identityPaths = [ "/var/lib/id_ed25519" ];
    secrets = {
      environment = {
        file = ../secrets/environment.age;
        group = "wheel";
        mode = "0440";
      };

      init_sql = {
        file = ../secrets/init_sql.age;
        owner = "postgres";
        group = "postgres";
        mode = "0440";
      };
    };
  };
}
